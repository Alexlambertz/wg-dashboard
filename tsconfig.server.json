{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"target": "es6",
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": false,
		"outDir": "dist",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true
	},
	"include": ["src/server/**/*.ts"],
	"exclude": ["node_modules"]
}
