{% extends "base.njk" %}

{% block content %}
<div class="container animated fadeIn">

	<div class="card w-50 mx-auto mt-5">

		<form class="card-body" onsubmit="return false;">
			<h5 class="card-title h2">Setup Username and Password</h5>

			<div class="card-text">
				<div class="md-form">
					<label for="username">Username</label>
					<input type="text" id="username" name="username" class="form-control">
				</div>

				<div class="md-form">
					<label for="password">Password</label>
					<input type="password" id="password" name="password" class="form-control">
				</div>

				<div class="md-form">
					<label for="password">Password confirmation</label>
					<input type="password" id="password_confirm" name="password_confirm" class="form-control">
				</div>
			</div>


			<div class="text-right">
				{% if not firstAccount %}
					<span onclick="window.location='/'" style="cursor: pointer;" class="mx-4">CANCEL</span>
				{% endif %}
				<button onclick="createUser();" class="btn btn-outline-dark btn-lg">CREATE</button>
			</div>
		</form>

	</div>
</div>
{% endblock %}
